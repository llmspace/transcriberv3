{
  "manifest_version": 3,
  "name": "YouTube Cookies Exporter for video-to-text-transcriber",
  "version": "1.0.0",
  "description": "Export YouTube-only cookies to a local file for use with video-to-text-transcriber (yt-dlp compatible format).",
  "permissions": [
    "cookies",
    "downloads"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.ytimg.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
